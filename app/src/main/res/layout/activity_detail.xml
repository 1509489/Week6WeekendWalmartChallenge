<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context="com.pixelart.week6weekendwalmartchallenge.ui.detailscreen.DetailActivity">

        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:id="@+id/scrollView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:scrollbarStyle="insideOverlay"
                style="@android:style/Widget.Material.ScrollView"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <ImageView
                        android:layout_width="0dp"
                        android:layout_height="230dp" app:srcCompat="@mipmap/ic_launcher"
                        android:id="@+id/ivImage" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvShortDesc"/>
                <TextView
                        android:text="Name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tvName"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:textSize="24sp"
                        android:textAlignment="textStart"
                        app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="8dp"
                        app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                        android:text="Descritpion"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/tvDescription"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        android:textSize="18sp"
                        app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/tvStock"
                        android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginTop="16dp"/>
                <TextView
                        android:text="Short Description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvShortDesc" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="0.0"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tvName"
                        android:maxLines="3" android:ellipsize="end" android:textSize="18sp"/>
                <TextView
                        android:text="Price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPrice" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvSellerInfo" android:textSize="18sp"/>
                <TextView
                        android:text="Delivery Info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvDeliveryInfo" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp"
                        app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvPreOrder" android:textSize="18sp"/>
                <TextView
                        android:text="Stock Info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvStock" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvDeliveryInfo"
                        app:layout_constraintHorizontal_bias="0.0"
                        android:textSize="18sp"/>
                <TextView
                        android:text="Seller Info"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvSellerInfo" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/ivImage" android:textSize="18sp"/>
                <TextView
                        android:text="PreOrder"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/tvPreOrder" app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="8dp" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/tvPrice" android:textSize="18sp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
